# Stage 1: Build
FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app

# Copy parent POM
COPY pom.xml .

# Copy tất cả pom.xml của các module (để Maven không báo lỗi khi parse parent POM)
COPY discovery-service/pom.xml ./discovery-service/
COPY api-gateway/pom.xml ./api-gateway/
COPY user-service/pom.xml ./user-service/
COPY subject-service/pom.xml ./subject-service/

# Download dependencies (chỉ parent, không build)
RUN mvn dependency:go-offline -B -N

# Copy source code của module cần build
COPY user-service/src ./user-service/src

# Build chỉ module user-service (bỏ -am để không build dependencies)
RUN mvn clean package -DskipTests -pl user-service

# Stage 2: Run
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY --from=build /app/user-service/target/*.jar app.jar
EXPOSE 8081
ENTRYPOINT ["java", "-jar", "app.jar"]