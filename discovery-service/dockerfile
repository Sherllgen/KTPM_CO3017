# Stage 1: Build
FROM maven:3.9-eclipse-temurin-17 AS build
WORKDIR /app

# 1. Copy all POM files first
COPY pom.xml .
COPY discovery-service/pom.xml ./discovery-service/
COPY api-gateway/pom.xml ./api-gateway/
COPY user-service/pom.xml ./user-service/
COPY subject-service/pom.xml ./subject-service/

# 2. Download dependencies with cache mount
RUN --mount=type=cache,target=/root/.m2 \
    mvn dependency:go-offline -B -pl discovery-service -am

# 3. Copy source code
COPY discovery-service/src ./discovery-service/src

# 4. Build with cache mount
RUN --mount=type=cache,target=/root/.m2 \
    mvn package -DskipTests -pl discovery-service -am

# Stage 2: Run
FROM eclipse-temurin:17-jre-alpine
RUN apk add --no-cache wget netcat-openbsd curl
WORKDIR /app
COPY --from=build /app/discovery-service/target/*.jar app.jar
EXPOSE 8761
ENTRYPOINT ["java", "-jar", "app.jar"]